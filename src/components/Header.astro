---
import { Image } from 'astro:assets';
import logoHeader from '../images/logo-header.svg';

interface SocialLink {
  icon: string;
  url: string;
}

const socialLinks: SocialLink[] = [
  {
    icon: 'fa-github',
    url: 'https://github.com/vorant94/',
  },
  {
    icon: 'fa-x-twitter',
    url: 'https://twitter.com/vorant94',
  },
  {
    icon: 'fa-medium',
    url: 'https://vorant94.medium.com/',
  },
];
---

<header class="flex gap-1 items-center p-4 border-b">
  <nav>
    <a href="/">
      <Image
        src={logoHeader}
        alt="Logo"
        height="24"
      />
    </a>
  </nav>

  <span class="flex-1"></span>

  <ul class="flex gap-3">
    {
      socialLinks.map((link) => (
        <li>
          <a
            class="text-gray-500 hover:text-inherit"
            href={link.url}
            target="_blank">
            <i class={`fa-brands ${link.icon} fa-lg`} />
          </a>
        </li>
      ))
    }
  </ul>
</header>
