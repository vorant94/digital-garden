{
  "name": "digital-garden",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier . --check && prettier **/*.astro --check",
    "format:fix": "prettier . --write && prettier **/*.astro --write",
    "prettier": "prettier",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0"
  }
}
