---
import '@fontsource/open-sans';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { TITLE } from '../shared/intro-texts.js';
import Analytics from '../components/Analytics.astro';
import Background from '../components/Background.astro';

interface Props {
  title?: string;
  image?: string | null;
}

const { title, image } = Astro.props;

const ogTitle = title ? `vorant94 | ${title}` : TITLE;
const ogType = title ? 'article' : 'website';
const ogUrl = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(image ?? '/favicon.ico', Astro.site);
---

<!doctype html>
<html
  lang="en"
  prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <meta
      property="og:title"
      content={ogTitle}
    />
    <meta
      property="og:type"
      content={ogType}
    />
    <meta
      property="og:url"
      content={ogUrl}
    />
    <meta
      property="og:image"
      content={ogImage}
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.ico"
    />
    <link
      rel="sitemap"
      href="/sitemap-index.xml"
    />
    <title>{ogTitle}</title>
  </head>
  <body
    class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-neutral-950 px-10 py-8 text-sm text-neutral-400 md:gap-20 md:py-16">
    <Analytics />

    <Background />

    <Header />

    <slot />

    <Footer />

    <style is:global>
      html {
        font-family: 'Open Sans';
      }
    </style>
  </body>
</html>
