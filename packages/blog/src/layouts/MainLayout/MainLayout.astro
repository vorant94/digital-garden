---
import { Analytics } from '@vercel/analytics/react';
import { Header } from './Header';
import { Footer } from './Footer';
import { Seo } from './Seo';
import { Nav } from './Nav';
import { Background } from '@/components/Background';
import { Meta } from '@/components/Meta';
import '@/styles/reset.css';
import { removeTrailingSlash } from '@/shared/url.helpers';
import { theme } from '@/shared/tailwind.helpers';
import { profile } from '@/shared/profile';

interface Props {
  title?: string;
  image?: string;
  description?: string;
  type?: string;
}

const { title, image, description, type } = Astro.props;
const isProd = import.meta.env.PROD;
const baseUrl = Astro.url.origin;
const currentPath = removeTrailingSlash(Astro.url.pathname);
---

<!doctype html>
<html
  class="dark:[color-scheme:dark]"
  lang="en"
  prefix="og: https://ogp.me/ns#">
  <head>
    <Meta title={title} />

    <Seo
      currentPath={currentPath}
      title={title}
      image={image}
      description={description}
      type={type}
      baseUrl={baseUrl}
    />
  </head>
  <body
    class:list={[
      ...theme.background,
      theme.fullWidth,
      'flex flex-col min-h-dvh',
    ]}>
    {isProd && <Analytics client:only="react" />}

    <Background />

    <Header>
      <Nav client:load>
        {
          profile.navLinks.map((link) => (
            <Nav.Link
              client:load
              href={link.url}>
              {link.label}
            </Nav.Link>
          ))
        }
      </Nav>
    </Header>

    <main class="flex-1 p-4 flex flex-col gap-2">
      <slot />
    </main>

    <Footer />
  </body>
</html>
