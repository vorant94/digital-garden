---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import logoHeader from '../images/logo-header.svg';

const links = (await getCollection('links')).filter(
  ({ data }) => !data.isHidden,
);
---

<header class="flex gap-1 items-center p-4 border-b">
  <nav>
    <a href="/">
      <Image
        src={logoHeader}
        alt="Logo"
        height="24"
      />
    </a>
  </nav>

  <span class="flex-1"></span>

  <ul class="flex gap-3">
    {
      links.map(({ data }) => (
        <li>
          <a
            class="text-gray-500 hover:text-inherit"
            href={data.url}
            target="_blank">
            <i class={`fa-brands ${data.icon} fa-lg`} />
          </a>
        </li>
      ))
    }
  </ul>
</header>
