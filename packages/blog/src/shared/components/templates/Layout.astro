---
import '@fontsource/open-sans';
import { Header } from '../organisms/Header';
import { Footer } from '../organisms/Footer';
import { PROFILE } from '../../Profile';
import { Background } from '../molecules/Background';
import { removeTrailingSlash } from '../../utils/RemoveTrailingSlash';
import { Analytics } from '@vercel/analytics/react';

interface Props {
  title?: string;
  image?: string;
  description?: string;
  type?: 'website' | 'article';
}

const {
  title = PROFILE.title,
  image = '/favicon.ico',
  description = PROFILE.description,
  type = 'website',
} = Astro.props;

const ogTitle = title === PROFILE.title ? title : `vorant94 | ${title}`;
const ogUrl = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(image, Astro.site);

const ogDomain = PROFILE.baseUrl.split('/').at(-1);

const isProd = import.meta.env.PROD;
const currentPath = removeTrailingSlash(Astro.url.pathname);
---

<!doctype html>
<html
  lang="en"
  prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />

    <!-- FACEBOOK -->
    <meta
      property="og:title"
      content={ogTitle}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:url"
      content={ogUrl}
    />
    <meta
      property="og:image"
      content={ogImage}
    />
    <meta
      property="og:type"
      content={type}
    />

    <!-- TWITTER -->
    <meta
      name="twitter:title"
      content={ogTitle}
    />
    <meta
      name="twitter:description"
      content={description}
    />
    <meta
      property="twitter:url"
      content={ogUrl}
    />
    <meta
      name="twitter:image"
      content={ogImage}
    />
    <meta
      name="twitter:card"
      content="summary_large_image"
    />
    <meta
      property="twitter:domain"
      content={ogDomain}
    />

    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.ico"
    />
    <link
      rel="sitemap"
      href="/sitemap-index.xml"
    />

    <title>{ogTitle}</title>
  </head>
  <body
    class="bg-gray-50 flex flex-col min-h-[calc(100dvh)] mx-auto md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl">
    {isProd && <Analytics client:only="react" />}

    <Background />

    <Header currentPath={currentPath} />

    <main class="flex-1 p-4 flex flex-col gap-2">
      <slot />
    </main>

    <Footer />
  </body>
</html>
