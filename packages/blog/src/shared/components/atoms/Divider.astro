---
interface Props {
  left?: boolean;
  right?: boolean;
}

const { left = true, right = true } = Astro.props;
---

<div class="relative flex py-5 items-center">
  {left && <div class="flex-grow border-t" />}
  <div class:list={['flex-shrink', { 'ml-4': left, 'mr-4': right }]}>
    <slot />
  </div>
  {right && <div class="flex-grow border-t" />}
</div>
