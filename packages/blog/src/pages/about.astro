---
import Layout from '../layouts/layout/Layout.astro';
import { Intro, Link, Divider, Icon, Headline, Text } from '../components';
import { THEME, PROFILE } from '../shared';
---

<Layout title="About">
  <Intro />

  <Divider>
    <Headline>Stay up to date</Headline>
  </Divider>

  <Text>
    If you wish to be up to date with new posts you can
    <Link
      href="/rss.xml"
      target="_blank">
      subscribe with RSS
    </Link>
  </Text>

  <Text>There will also be an email newsletter somewhere in the future</Text>

  <Divider>
    <Headline>How to reach me</Headline>
  </Divider>

  <ul class="grid grid-cols-3 gap-5 mx-auto">
    {
      PROFILE.socialLinks.map((link) => (
        <li>
          <a
            class:list={[
              'w-24 h-24 p-2',
              'flex flex-col gap-2 items-center justify-center',
              'border rounded-2xl',
              'hover:outline outline-cyan-500 hover:text-cyan-500 hover:border-cyan-500',
              ...THEME.primaryText,
            ]}
            href={link.url}
            target="_blank">
            <span class="text-xl">
              <Icon glyph={link.glyph} />
            </span>
            <span class="truncate max-w-full">{link.label}</span>
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
