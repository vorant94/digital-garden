		"alpinejs": "^3.13.8",
		"close-with-grace": "^1.3.0",
		"clsx": "^2.1.0",
		"date-fns": "^3.6.0",
		"fast-glob": "^3.3.2",
		"fastify": "^4.26.2",
		"hast": "^1.0.0",
		"hastscript": "^9.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.0",
		"remark-frontmatter": "^5.0.0",
