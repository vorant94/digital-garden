{
	"name": "@digital-garden/blog",
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"start:dev": "node --watch --env-file=.env .",
		"start:prod": "node .",
		"build:client": "tsc -p tsconfig.client.json && vite build",
		"build:client:watch": "vite build --watch --mode development",
		"build:server": "tsc",
		"build:server:watch": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"e2e": "playwright test",
		"e2e:setup": "playwright install --with-deps",
		"clean": "shx rm -rf dist && shx rm -rf public/client"
	},
	"dependencies": {
		"@fastify/static": "^7.0.3",
